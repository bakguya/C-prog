#include <iostream>
using namespace std;

int main() 
{
    int num, count = 0;
    cout << "숫자를 입력하세요: ";
    cin >> num;

    if (num == 0)
    {
        count = 1;
    }

    while (num > 0)
    {
        num /= 10;
        count++;
    }

    cout << "입력한 숫자는 " << count << "자리입니다." << endl;
    return 0;
}
